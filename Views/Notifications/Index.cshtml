@model Titan_BugTracker.Models.ViewModels.NotificationsViewModel
@{
    ViewData["Title"] = "Index";
}
<link href="~/assets/css/datatables.min.css" rel="stylesheet" />
<div class="page-content-tab">

    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="float-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#">Bug Avenger</a>
                        </li><!--end nav-item-->
                        <li class="breadcrumb-item">
                            <a href="#">Notifications</a>
                        </li><!--end nav-item-->
                    </ol>
                </div>
                <h4 class="page-title">Notifications</h4>
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div>
    <!-- end page title end breadcrumb -->
    <div class="row">
        <h5>Recieved Notifications</h5>
        <table class="table table-striped" id="ReceivedTable">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Message
                    </th>
                    <th>
                        Created
                    </th>
                    <th>
                        Viewed
                    </th>
                    <th>
                        Ticket
                    </th>
                    <th>
                        Recipient
                    </th>
                    <th>
                        Sender
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.RecievedNotifications)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Viewed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ticket.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Recipient.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sender.FullName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="row mt-3">
        <h5>Sent Notifications</h5>
        <table class="table table-striped" id="SentTable">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Message
                    </th>
                    <th>
                        Created
                    </th>
                    <th>
                        Viewed
                    </th>
                    <th>
                        Ticket
                    </th>
                    <th>
                        Recipient
                    </th>
                    <th>
                        Sender
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.SentNotifications)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Viewed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ticket.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Recipient.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sender.FullName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts {
    <script src="~/assets/js/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#SentTable').DataTable();
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#ReceivedTable').DataTable();
        });
    </script>
}