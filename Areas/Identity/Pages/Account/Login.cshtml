@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<div class="col-md-5 col-xl-3 col-lg-4">
    <div class="card mb-0 border-0 ms-0">
        <div class="card-body p-0">
            <div class="text-center p-3">
                <a asp-action="Landing" asp-controller="Home" class="logo logo-admin">
                    <img src="~/assets/images/logo-sm.png" height="50" alt="logo" class="auth-logo">
                </a>
                <h4 class="mt-3 mb-1 fw-semibold font-18">Let's Get Started Metrica</h4>
                <p class="text-muted  mb-0">Sign in to continue to Metrica.</p>
            </div>
        </div><!--end card-body-->
        <div class="card-body pt-0">
            <div asp-validation-summary="All" class="text-danger"></div>

            <form class="my-4" id="account" method="post">
                <div class="form-group mb-2">
                    <label class="form-label" asp-for="Input.Email">Username</label>
                    <input type="text" class="form-control" asp-for="Input.Email" placeholder="Enter username">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                </div><!--end form-group-->

                <div class="form-group">
                    <label class="form-label" asp-for="Input.Password">Password</label>
                    <input type="password" class="form-control" asp-for="Input.Password" placeholder="Enter password">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                </div><!--end form-group-->

                <div class="form-group row mt-3">
                    <div class="col-sm-6">
                        <div class="form-check form-switch form-switch-success">
                            <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="customSwitchSuccess">
                            <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                        </div>
                    </div><!--end col-->
                    <div class="col-sm-6 text-end">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-muted font-13"><i class="dripicons-lock"></i> Forgot password?</a>
                    </div><!--end col-->
                </div><!--end form-group-->

                <div class="form-group mb-0 row">
                    <div class="col-12">
                        <div class="d-grid mt-3">
                            <button class="btn btn-primary" type="submit">Log In <i class="fas fa-sign-in-alt ms-1"></i></button>
                        </div>
                    </div><!--end col-->
                </div> <!--end form-group-->
            </form><!--end form-->
            <div class="m-3 text-center text-muted">
                <p class="mb-0">Don't have an account ?  <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary ms-2">Free Resister</a></p>
            </div>
            <hr class="hr-dashed mt-4">
            <div class="text-center mt-n5">
                <h6 class="card-bg px-3 my-4 d-inline-block">Or Login With</h6>
            </div>
            <div class="d-flex justify-content-center mb-1">
                <div class="col-md-6 col-md-offset-2">
                    <section>
                     
                        <form class="" id="account" method="post">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-12 btn-block">
                                        <button type="submit" style="width:inherit;height:min-content" class="btn ripple btn-outline-primary p-10 m-2" name="demoEmail" value="DemoAdminEmail">Demo Admin</button>
                                        <button type="submit" style="width:inherit;height:min-content" class="btn ripple btn-outline-primary p-10 m-2" name="demoEmail" value="DemoPMEmail">Demo PM</button>
                                        <button type="submit" style="width:inherit;height:min-content" class="btn ripple btn-outline-primary p-10 m-2" name="demoEmail" value="DemoDevEmail">Demo Developer</button>
                                        <button type="submit" style="width:inherit;height:min-content" class="btn ripple btn-outline-primary p-10 m-2" name="demoEmail" value="DemoSubEmail">Demo Submitter</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div><!--end card-body-->
    </div><!--end card-->
</div><!--end col-->
